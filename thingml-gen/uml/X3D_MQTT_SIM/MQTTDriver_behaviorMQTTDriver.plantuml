state behaviorMQTTDriver{
state Alive1{
	Alive1 : entry / ...\n

Alive1 --> Alive2 : alv:require_val?iamalive1\naction ...\n

Alive1 --> Idle : alv:require_val?iamalive2\naction ...\n
}
state Alive2{

Alive2 --> Idle : alv:require_val?iamalive2
}
